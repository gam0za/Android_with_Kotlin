<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seminar2.Main4Activity">
    <RelativeLayout
        android:id="@+id/red"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/holo_red_dark"
        android:layout_width="300dp"
        android:layout_height="300dp"></RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="90dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_width="200dp"
        android:layout_height="200dp"></RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="200dp"
        android:background="@android:color/holo_orange_light"
        android:layout_width="100dp"
        android:layout_height="100dp"></RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="160dp"
        android:layout_below="@+id/red"
        android:background="@android:color/holo_green_light"
        android:layout_width="50dp"
        android:layout_height="50dp"></RelativeLayout>
</RelativeLayout>
